# Required
OPENROUTER_API_KEY=your_openrouter_api_key

# Chat model (free defaults are often available via OpenRouter)
OPENROUTER_CHAT_MODEL=openai/gpt-oss-20b:free

# Embeddings (free-by-default: local model)
EMBEDDING_PROVIDER=local
LOCAL_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Only used when EMBEDDING_PROVIDER=openrouter (usually paid)
OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-small

# Optional
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
SITE_URL=https://jonahheim.com
SITE_NAME=Jonah Heim Portfolio
VECTOR_STORE_DIR=.chroma
